<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="24dip" />
            <stroke android:width="1dip" android:color="#ff9900" />
            <gradient android:angle="-90" android:startColor="#e58900" android:endColor="#ffb74c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="#ff9900" />
            <solid android:color="#ff9900"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="22dip" />
            <stroke android:width="1dip" android:color="#ff9900" />
            <gradient android:angle="-90" android:startColor="#ffb74c" android:endColor="#e58900" />
        </shape>
    </item>

</selector>